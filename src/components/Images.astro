---
import { Image } from "astro:assets";

import fluid1 from "../../public/img/fluid-9-aug-2025/fluid-1.jpeg";
import fluid2 from "../../public/img/fluid-9-aug-2025/fluid-2.jpeg";
import village1 from "../../public/img/village-beverage-18-jul-2025/signal-2025-07-19-071550_005.jpeg";
import village2 from "../../public/img/village-beverage-18-jul-2025/signal-2025-07-19-071550_006.jpeg";
import village3 from "../../public/img/village-beverage-18-jul-2025/signal-2025-07-19-071550_002.jpeg";
import village4 from "../../public/img/village-beverage-18-jul-2025/signal-2025-07-19-071550_003.jpeg";
import village5 from "../../public/img/village-beverage-6-apr-2025/PXL_20250406_212243257.jpg";
import village6 from "../../public/img/village-beverage-6-apr-2025/PXL_20250406_212257125.jpg";
import village7 from "../../public/img/village-beverage-6-apr-2025/PXL_20250406_212301426.jpg";
import village8 from "../../public/img/village-beverage-6-apr-2025/PXL_20250406_212308041.jpg";
import village9 from "../../public/img/village-beverage-6-apr-2025/PXL_20250406_212317469.jpg";
import village10 from "../../public/img/village-beverage-6-apr-2025/PXL_20250406_215301265.jpg";
import village11 from "../../public/img/village-beverage-6-apr-2025/PXL_20250406_215319926.jpg";
import village12 from "../../public/img/village-beverage-6-apr-2025/PXL_20250406_233557613.jpg";
import pine1 from "../../public/img/pine-knolls-16-aug-2024/PXL_20240816_231556893.jpg";
import pine2 from "../../public/img/pine-knolls-16-aug-2024/PXL_20240816_231607913.jpg";

const images = [
  { src: fluid1, caption: "FLUID Coffee Roasters" },
  { src: fluid2, caption: "FLUID Coffee Roasters" },
  { src: village1, caption: "Village Beverage" },
  { src: village2, caption: "Village Beverage" },
  { src: village3, caption: "Village Beverage" },
  { src: village4, caption: "Village Beverage" },
  { src: village5, caption: "Village Beverage" },
  { src: village6, caption: "Village Beverage" },
  { src: village7, caption: "Village Beverage" },
  { src: village8, caption: "Village Beverage" },
  { src: village9, caption: "Village Beverage" },
  { src: village10, caption: "Village Beverage" },
  { src: village11, caption: "Village Beverage" },
  { src: village12, caption: "Village Beverage" },
  { src: pine1, caption: "Pine Knolls Pub" },
  { src: pine2, caption: "Pine Knolls Pub" },
];
---

<div>
  <h2 id="images" class="text-2xl font-bold mb-4">Images</h2>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 p-4">
    {images.map(({ src, caption }, i) => (
      <button
        type="button"
        class="rounded-xl overflow-hidden shadow-md transition hover:scale-105 image-button"
        data-src={src.src}
        data-caption={caption}
        data-index={i}
      >
        <Image
          src={src}
          alt={caption}
          width={400}
          height={300}
          class="object-cover w-full aspect-video"
          loading="lazy"
        />
      </button>
    ))}
  </div>
  <div class="modal pointer-events-auto" id="img-modal">
    <div class="modal-box max-w-4xl w-full relative">
      <img id="modal-img" class="w-full h-auto rounded-lg mb-4" />
      <p id="modal-caption" class="text-center text-lg font-medium text-gray-600 mb-4"></p>
      <button id="prev-btn" class="btn btn-sm bg-secondary">←</button>
      <button id="next-btn" class="btn btn-sm bg-secondary">→</button>
      <div class="modal-action">
        <button id="close-btn" class="btn">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const buttons = document.querySelectorAll(".image-button");
    const modal = document.getElementById("img-modal");
    const modalImg = document.getElementById("modal-img");
    const modalCaption = document.getElementById("modal-caption");
    const closeBtn = document.getElementById("close-btn");
    const prevBtn = document.getElementById("prev-btn");
    const nextBtn = document.getElementById("next-btn");

    let currentIndex = 0;
    const images = Array.from(buttons).map(btn => ({
      src: btn.dataset.src,
      caption: btn.dataset.caption,
    }));

    function showImage(index) {
      currentIndex = index;
      const image = images[currentIndex];
      modalImg.src = image.src;
      modalCaption.textContent = image.caption;
    }

    function openModal(index) {
      showImage(index);
      modal.classList.add("modal-open");
    }

    function closeModal() {
      modal.classList.remove("modal-open");
    }

    buttons.forEach((btn, i) => {
      btn.addEventListener("click", () => {
        const index = Number(btn.dataset.index);
        openModal(i);
      });
    });

    closeBtn.addEventListener("click", closeModal);

    prevBtn.addEventListener("click", (e) => {
      e.preventDefault();
      e.stopPropagation();
      showImage((currentIndex - 1 + images.length) % images.length);
    });

    nextBtn.addEventListener("click", (e) => {
      e.preventDefault();
      e.stopPropagation();
      showImage((currentIndex + 1) % images.length);
    });
  });
</script>
